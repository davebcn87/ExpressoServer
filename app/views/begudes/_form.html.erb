<%= form_for(@beguda) do |f| %>
	<% if @beguda.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@beguda.errors.count, "error") %> prohibited this beguda from being saved:</h2>

	    <ul>
	    <% @beguda.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="field">
	  <%= f.label :nom %><br />
	  <%= f.text_field :nom %>
	</div>
	<div class="field">
	  <%= f.label :preuTall %><br />
	  <%= f.text_field :preuTall %>
	</div>
	<div class="field">
	  <%= f.label :preuGrande %><br />
	  <%= f.text_field :preuGrande %>
	</div>
	<div class="field">
	  <%= f.label :preuVenti %><br />
	  <%= f.text_field :preuVenti %>
	</div>

  <% if @categories %>
    <div class="field">
      <%= f.label :categoria %><br />
      <%= f.collection_select :categoria_id, @categories, :id, :nom %>
    </div>
  <% end %>
	<% 
	if @extres
		@extres.each do |extra| %>
			<div>
				<% checked = @llistaExtres && @llistaExtres.include?(extra.id) %>
				<%= f.label extra.nom %>
				<%= check_box_tag "extres[]", extra.id.to_s, checked %>
			</div>
	<% 	end
 	else %>
		No extras available
	<% end %>

	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>
